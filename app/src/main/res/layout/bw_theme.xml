<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="nyc.c4q.simongame.MainActivity"
android:orientation="vertical"
android:gravity="center"
android:id="@+id/bw_theme"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/firstset_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="@dimen/buttonheight"
            android:text="Click"
            android:textSize="@dimen/buttotext_height"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"
            android:layout_marginHorizontal="@dimen/buttonMargin"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="@dimen/buttonheight"
            android:text="Click"
            android:textColor="@color/white"
            android:textSize="@dimen/buttotext_height"
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin" />

        <Button
            android:id="@+id/btn1_1"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="@dimen/buttonheight"
            android:text="Click"
            android:textColor="@color/white"
            android:textSize="@dimen/buttotext_height"
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"/>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/response_and_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <Button
            android:id="@+id/btnmiddle_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Click"
            android:textColor="@color/white"
            android:textSize="@dimen/buttotext_height"
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"/>



        <Button
            android:id="@+id/btnmiddle_1_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Click"
            android:textColor="@color/white"
            android:textSize="@dimen/buttotext_height"
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"/>

        <TextView
            android:id="@+id/response"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Press Start"
            android:fontFamily="serif-monospace"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"

            />

        <Button
            android:id="@+id/btnmiddle_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Click"
            android:textColor="@color/white"
            android:textSize="@dimen/buttotext_height"
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/secondset_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/buttonheight"
            android:text="Click"
            android:textSize="@dimen/buttotext_height"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/buttonheight"
            android:text="Click"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:textSize="@dimen/buttotext_height"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"/>

        <Button
            android:id="@+id/btn2_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/buttonheight"
            android:text="Click"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:textSize="@dimen/buttotext_height"
            android:layout_marginLeft="@dimen/buttonMargin"
            android:layout_marginRight="@dimen/buttonMargin"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/levelNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </LinearLayout>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".2"
    android:orientation="vertical"
    android:background="@color/black">

    <Button
        android:id="@+id/reset"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Start"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="#353535"
        />


    <TextView
        android:id="@+id/sequenceText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Sequence="
        android:textAlignment="center"
        android:textColor="@color/white"
        />

    </LinearLayout>
</LinearLayout>