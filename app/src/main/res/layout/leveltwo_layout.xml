<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.simongame.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/mainLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:gravity="center"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="30sp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/firstset_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/buttonheight"
                android:text="Click"
                android:textSize="@dimen/buttotext_height"
                android:background="@color/color1Off"
                android:layout_marginLeft="@dimen/buttonMargin"
                android:layout_marginRight="@dimen/buttonMargin"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/buttonheight"
                android:text="Click"
                android:textSize="@dimen/buttotext_height"
                android:background="@color/color2Off"
                android:layout_marginLeft="@dimen/buttonMargin"
                android:layout_marginRight="@dimen/buttonMargin"/>


            <Button
                android:id="@+id/btn1_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/buttonheight"
                android:text="Click"
                android:textSize="@dimen/buttotext_height"
                android:background="@color/color2Off"
                android:layout_marginLeft="@dimen/buttonMargin"
                android:layout_marginRight="@dimen/buttonMargin"/>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/response_and_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/response"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Press Start"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginBottom="@dimen/buttonMargin"
                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/secondset_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/buttonheight"
                android:text="Click"
                android:textSize="@dimen/buttotext_height"
                android:background="@color/color3Off"
                android:layout_marginLeft="@dimen/buttonMargin"
                android:layout_marginRight="@dimen/buttonMargin"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/buttonheight"
                android:text="Click"
                android:background="@color/color4Off"
                android:textSize="@dimen/buttotext_height"
                android:layout_marginLeft="@dimen/buttonMargin"
                android:layout_marginRight="@dimen/buttonMargin"/>

            <Button
                android:id="@+id/btn2_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/buttonheight"
                android:text="Click"
                android:background="@color/color4Off"
                android:textSize="@dimen/buttotext_height"
                android:layout_marginLeft="@dimen/buttonMargin"
                android:layout_marginRight="@dimen/buttonMargin"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level"
                android:gravity="center"
                android:textSize="30sp"
                />


            <TextView
                android:id="@+id/levelNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30sp"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:orientation="vertical">

        <Button
            android:id="@+id/reset"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Start"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/sequenceText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Sequence="
            android:textAlignment="center"/>

    </LinearLayout>
</LinearLayout>